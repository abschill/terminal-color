{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "lib2",
		"rootDirs": ["lib2", "./lib"],
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "cjs",
		"module": "commonjs",
		"target": "ES2020",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"checkJs": false
	},
	"include": [
		"./lib2/**/*"
	]
}
